# Environment variables for Docker setup
# Copy this file to .env and update the values

# Database Configuration
POSTGRES_DB=lazysheeps_db
POSTGRES_USER=lazysheeps_user
POSTGRES_PASSWORD=lazysheeps_password
DATABASE_URL=postgresql://lazysheeps_user:lazysheeps_password@db:5432/lazysheeps_db

# Django Backend Configuration
DEBUG=1
SECRET_KEY=change-this-to-a-random-secret-key-in-production
ALLOWED_HOSTS=localhost,127.0.0.1,backend
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173,http://frontend:5173

# Frontend Configuration
VITE_API_URL=http://localhost:8000
VITE_WS_URL=ws://localhost:8000

# Ports (if you want to change defaults)
BACKEND_PORT=8000
FRONTEND_PORT=5173
POSTGRES_PORT=5432
